# Unix
alias ll="ls -FGlahp"
alias cp="cp -r"
alias rm="rm -rf"
alias mkdir="mkdir -p"
alias tree="tree -I 'node_modules|cache|test_*'"

# Tmux
alias mux='tmuxinator'
alias tns="tmux new-session -s"
alias tas="tmux attach -t"
alias tds="tmux detach"
alias tls="tmux list-sessions"
alias tks="tmux kill-session -t"

# Git
alias gs="git status"
alias ga="ga ."
alias gbc='git checkout -b'
alias gd="git diff | vim -"
alias gdc="git diff --cached | vim -"
alias gsync="git fetch upstream && git rebase upstream/develop && git push"

# Rails
alias bi="bundle install"
alias bu="bundle update"
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"

# Docker-compose
alias db="docker-compose build"
alias du="docker-compose up"
alias dd="docker-compose down"

alias cpkey="cat ~/.ssh/id_rsa.pub | pbcopy"

# ;)
alias dcss="ssh joshua@crawl.akrasiac.org" # pass: joshua
alias editlic="vim ~/Library/Application\ Support/com.ynab.YNAB4.LiveCaptive/Local\ Store/.lic"
